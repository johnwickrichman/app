<%- include('header') %>


    <div class="mt-3">

        <div class="h4">รายการสั่งซื้อจากลูกค้า</div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th width="100">ภาพสินค้า</th>
                    <th width="100">บาร์โค้ด</th>
                    <th>รายการสินค้า</th>
                    <th width="100" class="text-right">ราคา</th>
                    <th width="100" class="text-right">จำนวน</th>
                    <th width="100" class="text-right">ยอดรวม</th>
                </tr>
            </thead>

            <tbody>
                <% orderDetails.forEach((orderDetail) => { %>
                    <tr>
                        <td>
                            <img src="../images/<%= orderDetail.img %>" width="100">
                        </td>
                        <td>
                            <%= orderDetail.barcode %>
                        </td>
                        <td>
                            <%= orderDetail.name %>
                        </td>
                        <td class="text-right">
                            <%= numeral(orderDetail.price).format() %>
                        </td>
                        <td class="text-right">
                            <%= numeral(orderDetail.qty).format() %>
                        </td>
                        <td class="text-right">
                            <%= numeral(orderDetail.qty * orderDetail.price).format() %>
                        </td>
                    </tr>

                    <% }) %>
            </tbody>
        </table>

        <div class="alert alert-success mt-3 h4">
            จำนวน
            <%= numeral(totalQty).format() %> รายการ เป็นเงิน
                <%= numeral(totalPrice).format() %> บาท
        </div>

    </div>



    <%- include('footer') %>