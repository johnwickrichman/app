<%- include('header') %>

    <div class="container">
        <div class="row justify-content-center">
            <div class="h1 sarabun-600 mt-5 text-center text-info col-12">
                เพิ่มรายการสินค้า
            </div>


            <form method="post" enctype="multipart/form-data">
                <div class="card mt-5 mb-5" style="width:35rem;">
                    <div class="card-body">

                        <div class="card-title">
                            เพิ่มรายการสินค้า
                        </div>

                        <div class="mt-3">
                            <label>ประเภทสินค้า</label>

                            <select name="group_product_id" class="form-control">
    
                                    <% groupProducts.forEach((gp) => { %>

                                        <option value="<%= gp.id %>" 

                                            
                                            <% if (product.group_product_id	== gp.id) { %>
                                                selected
                                                <% } %>
                                                
                                                >


                                            <%= gp.name %>

                                        
                                        </option>


                                    <% })  %>
    
                                </select>


                        </div>
                        <div class="mt-3">
                            <label>Barcode</label>
                            <input type="text" name="barcode" class="form-control" value="<%= product.barcode	 %>">
                        </div>
                        <div class="mt-3">
                            <label>ชื่อสินค้า</label>
                            <input type="text" name="name" class="form-control" value="<%= product.name %>">
                        </div>
                        <div class="mt-3">
                            <label>ราคาทุน</label>
                            <input type="text" name="cost" class="form-control" value="<%= product.cost %>">
                        </div>
                        <div class="mt-3">
                            <label>ราคาจำหน่าย</label>
                            <input type="text" name="price" class="form-control" value="<%= product.price %>">
                        </div>
                        <div class="mt-3">

                            <% if (product.product_image) { %>
                                <div class="mt-1 mb-1">
                                    <img src="../images/<%= product.img %>" width="300">
                                </div>
                                <% } %>
                                    <label>ภาพสินค้า</label>
                                    <input type="file" name="img" class="form-control">
                        </div>


                        <div class="mt-3">
                            <button type="submit" class="btn btn-info btn-lg">
                                    <span class="material-icons material-symbols-outlined mr-3">
                                        save
                                        </span>
                                        บันทึกข้อมูลสินค้า</button>
                        </div>
                    </div>
                </div>
            </form>








        </div>
    </div>


    <%- include('footer') %>