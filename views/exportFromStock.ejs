<%- include('header') %>

<div class="container">
  <div class="mt-5">
    <div class="card">
      <div class="card-body">
        <div class="card-title">เบิกสินค้า ออกจากสต็อก</div>

        <form method="post">

            <div class="mt-3">
              <label for="">บาร์โค้ด</label>
              <input type="text" class="form-control" name="product_barcode" />
            </div>

            <div class="mt-3">
              <label for="">จำนวน</label>
              <input type="text" class="form-control" name="qty" value="1" />
            </div>

            <div class="mt-3">
              <label for="">หมายเหตุ</label>
              <input type="text" class="form-control" name="remark" />
            </div>

            <div class="mt-3">
              <button class="btn btn-info" type="submit">บันทึก การเบิกสินค้า</button>
            </div>

        </form>





        <table class="table table-bordered table-striped mt-5">
          <thead>
            <tr>
              <th width="150" class="text-center"></th>
              <th>บาร์โค้ด</th>
              <th>รายการสินค้า</th>
              <th class="text-right">จำนวน</th>
              <th>วันที่รับเข้าสต็อก</th>
              <th>หมายเหตุ</th>
            </tr>
          </thead>

          <tbody>

            <% stockOut.forEach((item) => { %>
            <tr>
              <td class="text-center">
                <a class="btn btn-danger" href="/deleteExportToStock/<%= item.id %>" onclick="return confirm('คุณต้องการลบจริงๆใช่มั้ยคะ ?')">
                  <span class="material-icons material-symbols-outlined ">
                    close
                    </span>
                </a>
                <a class="btn btn-info" href="">
                  <span class="material-icons material-symbols-outlined ">
                    edit
                    </span>
                </a>
              </td>
              <td><%= item.barcode %></td>
              <td><%= item.name %></td>
              <td class="text-right"><%= item.qty %></td>
              <td><%= dayjs(item.created_date).format(dayFormat) %></td>
              <td><%= item.remark %></td>
            </tr>
            <% }) %>

          </tbody>



        </table>



      </div>
    </div>
  </div>
</div>

<%- include('footer') %>
