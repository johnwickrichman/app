<%- include('header_index') %>

<div class="container mt-3">
  <form>
    <div class="input-group my-3">
      <div class="input-group-prepend">
        <div class="input-group-text">ป้อนคำค้นหา</div>
      </div>

      <input type="text" name="search" class="form-control" />

      <div class="input-group-append">
        <button class="btn btn-info" type="submit">
          <span class="material-icons material-symbols-outlined"> search </span>
          ค้นหา
        </button>
      </div>
    </div>
  </form>

    <div class="row mt-3">

        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-12">
            <ul class="list-group">
                <% groupProducts.forEach((gp) => { %>
            <li class="list-group-item">
                <a href="/?groupProductId=<%= gp.id %>">
                    <%= gp.name %>
                </a>
            </li>
            <% }) %>
            </ul>
        </div>


        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-xs-12">
            <div class="row">
            <% products.forEach((product) => { %>
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="card mb-3">
                <img
                    src="images/<%= product.img %>"
                    height="210"
                    class="card-img-top"
                    alt=" "
                />
                <div class="card-body">
                    <div><%= product.name %></div>
                    <div class="text-center text-bold text-info">
                    <%= product.price %>
                    </div>

                    <div class="text-center">
                    <a
                        class="btn btn-info mt-2"
                        href="/addToCart/<%= product.id %>"
                    >
                        <span class="material-icons material-symbols-outlined">
                        shopping_cart
                        </span>
                        Add</a
                    >
                    </div>
                </div>
                </div>
            </div>
            <% }) %>
            </div>
        </div>


    </div>
</div>

<%- include( 'footer_index') %>
