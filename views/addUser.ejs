<%- include('header') %>

    <div class="container">
        <div class="row justify-content-center">
            <div class="h1 sarabun-600 mt-5 text-center text-info col-12">
                เพิ่มข้อมูลสมาชิก
            </div>


            <div class="card w-50 mt-4 mb-4">
                <div class="card-body">
                    <form method="post">

                        <div class="card-title">
                            เพิ่มผู้ใช้งานระบบ
                        </div>

                        <div class="mt-3">
                            <label>ชื่อ</label>
                            <input type="text" name="name" class="form-control" value="<%= user.name %>">
                        </div>
                        <div class="mt-3">
                            <label>username</label>
                            <input type="text" name="user" class="form-control" value="<%= user.user %>">
                        </div>
                        <div class="mt-3">
                            <label>password</label>
                            <input type="password" name="pass" class="form-control" value="<%= user.pwd %>">
                        </div>
                        <div class="mt-3">
                            <label>ระดับสมาชิก</label>
                            <div><input type="radio" name="level" value="user" <% if (user.level=='user' ) { %> checked
                                <% } %>> User</div>
                            <div><input type="radio" name="level" value="admin" <% if (user.level=='admin' ) { %> checked
                                <% } %>> Admin</div>
                            <div><input type="radio" name="level" value="guest" <% if (user.level=='guest' ) { %> checked
                                <% } %>> Guest</div>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-info">
                                <span class="material-icons material-symbols-outlined mr-3">
                                    save
                                    </span>
                                    Save</button>
                        </div>
                    </form>
                </div>
            </div>








        </div>
    </div>


    <%- include('footer') %>