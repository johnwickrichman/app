<%- include('header') %>


  <div class="mt-3">
    <div class="card">
      <div class="card-body">
        <div class="card-title">รายงานยอดขาย แยกตามสินค้า</div>


        <table class="table table-bordered table-striped mt-3">
          <thead>
            <tr>
              <th class="text-center" width="150">บาร์โค้ด</th>
              <th class="text-center" width="300">รายการสินค้า</th>
              <th class="text-right">ยอดขาย</th>
            </tr>
          </thead>

          <tbody>
            <% arr.forEach( (item) => { %>
            <tr>
              <td class="text-center"><%= item.barcode %></td>
              <td class="text-center"><%= item.name %></td>
              <td class="text-right"><%= item.totalPrice %></td>
            </tr>

            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>


<%- include('footer') %>
