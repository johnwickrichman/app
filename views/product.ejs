<%- include('header') %>

    <div class="container">
        <div class="row justify-content-center">
            <div class="h1 sarabun-600 mt-5 text-center text-info col-12">
                จัดการข้อมูลสินค้า
            </div>

            <div class="card mt-3 w-100">
                <div class="card-body">
                    <div class="card-title">
                        สินค้า
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-info" href="/addProduct">
                            <span class=" material-icons material-symbols-outlined mr-2 ">
                                add
                                </span> เพิ่มสินค้า
                        </a>
                    </div>

                    <div class="mt-3">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th width="140"></th>
                                    <th class="text-center">ภาพสินค้า</th>
                                    <th class="text-center">ประเภทสินค้า</th>
                                    <th class="text-center">บาร์โค้ด</th>
                                    <th>รายการสินค้า</th>
                                    <th class="text-right">ราคาทุน</th>
                                    <th class="text-right">ราคาจำหน่าย</th>
                                </tr>
                            </thead>

                            <tbody>

                                <% products.forEach((product) => {  %>
                                    <tr>


                                        <td class="text-center">
                                            <a class="btn btn-info" href="/editProduct/<%= product.id %>">
                                                <span class="material-icons material-symbols-outlined ">
                                                edit
                                                </span>
                                            </a>
                                            <a class="btn btn-danger" href="/deleteProduct/<%= product.id %>" onclick="return confirm('คุณต้องการลบจริงๆใช่มั้ยคะ ?')">
                                                <span class="material-icons material-symbols-outlined ">
                                                close
                                                </span>
                                            </a>
                                        </td>
                                        <td><img src="images/<%= product.img %>" width="200"></td>
                                        <td class="text-center">
                                            <%= product.group_name %>
                                        </td>
                                        <td class="text-center">
                                            <%= product.barcode %>
                                        </td>
                                        <td>
                                            <%= product.name %>
                                        </td>
                                        <td class="text-right">
                                            <%= product.cost %>
                                        </td>
                                        <td class="text-right">
                                            <%= product.price %>
                                        </td>

                                        <% }) %>
                                    </tr>

                            </tbody>
                        </table>
                    </div>




                </div>
            </div>

        </div>
    </div>


    <%- include('footer') %>